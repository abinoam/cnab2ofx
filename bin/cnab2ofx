#!/usr/bin/env ruby
#encoding:utf-8

ROOT_DIR = File.expand_path(File.join(File.dirname(__FILE__), ".."))

require 'yaml'
require 'pp'
require 'date'
require 'erb'
require File.join(ROOT_DIR, 'helpers/cnab240_helper.rb')
require File.join(ROOT_DIR, 'lib/cnab2ofx.rb')

CONFIG_DIR = File.join ROOT_DIR, 'lib/cnab2ofx/cnab240'
VIEW_DIR   =  File.join ROOT_DIR, 'view' 

if ARGV[0].nil?
  puts "Usage: cnab2ofx [cnab240_input_file] > [ofx_output_file]"
else
  filename = ARGV[0] 
  cnab240 = CNAB240.new(filename)
  puts cnab240.to_ofx
end